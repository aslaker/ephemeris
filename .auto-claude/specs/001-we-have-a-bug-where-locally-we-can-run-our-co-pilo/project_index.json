{
  "project_root": "/Users/adamslaker/projects/personal/ephemeris",
  "project_type": "single",
  "services": {
    "main": {
      "name": "main",
      "path": ".",
      "language": "TypeScript",
      "framework": "React with TanStack Router/Start",
      "type": "fullstack",
      "package_manager": "npm",
      "default_port": 3000,
      "build_tool": "Vite",
      "styling": "Tailwind CSS",
      "dev_command": "npm run dev",
      "build_command": "npm run build",
      "test_command": "npm run test",
      "deploy_command": "npm run deploy",
      "entry_point": "src/server-entry.ts",
      "key_directories": {
        "src": {
          "path": "src",
          "purpose": "Source code"
        },
        "src/lib": {
          "path": "src/lib",
          "purpose": "Shared libraries and utilities"
        },
        "src/lib/copilot": {
          "path": "src/lib/copilot",
          "purpose": "Copilot agent implementation"
        },
        "src/lib/iss": {
          "path": "src/lib/iss",
          "purpose": "ISS API integrations"
        },
        "src/routes": {
          "path": "src/routes",
          "purpose": "TanStack Router pages"
        }
      },
      "cloudflare": {
        "durable_objects": ["CopilotAgent"],
        "bindings": ["AI", "CopilotAgent"],
        "config_file": "wrangler.jsonc"
      }
    }
  },
  "infrastructure": {
    "ci": "GitHub Actions",
    "ci_workflows": ["deploy.yml", "pr-check.yml"],
    "deployment": "Cloudflare Workers",
    "database": null,
    "docker": false
  },
  "conventions": {
    "typescript": true,
    "linter": "biome",
    "formatter": "biome",
    "testing": "vitest",
    "error_tracking": "Sentry"
  },
  "production_urls": [
    "https://ephemeris.observer",
    "https://www.ephemeris.observer"
  ]
}
