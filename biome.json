{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["src/**", "*.ts", "*.tsx", "*.json", "*.jsonc", "*.css"]
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	},
	"formatter": {
		"indentStyle": "tab"
	},
	"overrides": [
		{
			"includes": ["src/routeTree.gen.ts"],
			"linter": {
				"enabled": false
			},
			"formatter": {
				"enabled": false
			},
			"assist": {
				"enabled": false
			}
		}
	]
}
